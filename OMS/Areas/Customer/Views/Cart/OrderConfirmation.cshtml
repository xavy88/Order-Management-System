@model int
@{
    ViewData["Title"] = "OrderConfirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container row">
    <div class="col-12 text-center">
        <h1 class="text-center text-white" style="background-color:rgba(0,0,0,0.5);">Order Request Submitted</h1><br />
        <img src="~/images/order_confirmation.png" width="50%" />
    </div>
    <div class="col-12 text-center" style="color:maroon">
        <br />
        <h5 class="text-white">Thank you for submitting a request online! <br />
        We have received your request and our team will be call you shortly!
        </h5>
        <br />
        <h3 class="text-white"> Your Request Number is : @Model </h3>
</div>
</div>
