@model OMS.Models.ViewModel.HomeVM

@foreach (var category in Model.CategoryList.OrderBy(o => o.Name))
{
    @if (Model.ServiceList.Where(c => c.CategoryId == category.Id).Count() > 0)
    {
        <div class="row container pb-3 backgroundWhite search-background">
            <div class="col-12">
                <div class="row">
                    <h1 class="text-white"><i class="fas fa-check"></i> <b>@category.Name</b></h1>

                    <div class="col-12">
                        <div class="row my-3">
                            @foreach (var service in Model.ServiceList.Where(c => c.CategoryId == category.Id))
                            {
                                <div class="col-lg-4 col-xl-3 col-md-6 pb-4">
                                    <div class="card backgroundWhite" style="border: 2px solid black; border-radius: 5px;">
                                        <div class="pl-3 pt-1 text-center">
                                            <h6 class="card-title text-primary"><b>@service.Name</b></h6>
                                        </div>
                                        <div class="d-flex justify-content-between ">
                                            <div class="pl-1 text-info h5">Price</div>
                                            <div class="pr-1 text-success h4"><b>$@service.Price</b></div>
                                        </div>
                                        <img src="@service.ImageUrl" class="card-img-top p-2 rounded" />

                                        <div class="text-primary text-center pb-2 h5">@service.Category.Name</div>
                                        <a asp-action="Details" class="btn btn-success" style="border-radius:2px;background-color:midnightblue;" asp-route-id="@service.Id">Details</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}